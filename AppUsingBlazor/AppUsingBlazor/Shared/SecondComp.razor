@using Data
@inject NavigationManager Navigation
<h3>UserComponent</h3>
<div style='float: right;' @onclick = "Clicking">@user.Name</div>
<div style='float: right;'@onclick = "Clicking">@user.Surname</div>

<div class="card">
        <p>Name:  @user.Name</p>
        <p>Surname:  @user.Surname</p>
        <p>Email: @user.Email</p>
</div>

@code {
	[Parameter]
	public User user { get; set; }

    private void Clicking()
    {
        Navigation.NavigateTo("/main");
    }
}
